#!/usr/bin/env bash
#
# Description: Decompress all rar files in directory
#
###

for FILE in $(ls *.rar) 
do
    FILE_BASE=${FILE%%.rar}
    # Uncompress rar file
    unar $FILE
    # Extract pdf or epub and clean up extracted directory and compressed file
    if compgen -G "${FILE_BASE}/*.pdf" > /dev/null
    then
        mv ${FILE_BASE}/*.pdf . && 
        rm -rf ${FILE_BASE} && 
        rm $FILE
    elif compgen -G "${FILE_BASE}/*.epub" > /dev/null
    then
        mv ${FILE_BASE}/*.epub . &&
        rm -rf ${FILE_BASE} &&
        rm $FILE
    fi
done

# Reformat file
ebook
